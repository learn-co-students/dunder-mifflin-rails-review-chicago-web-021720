<h1>Edit Employee</h1>

<% if @errors %>
    <ul>
    <% @errors.each do |error| %>
        <li>
            <%= error %>
        </li>
    <% end %>
    </ul>
<% end %>

<%= form_for @employee do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <%= f.label :alias %>
    <%= f.text_field :alias %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :office %>
    <%= f.text_field :office %>
    <%= f.label :img_url, "Image URL" %>
    <%= f.text_field :img_url %>
    <%= f.collection_select :dog_id, @dogs, :id, :name %>
    <%= f.submit %>
<% end %>

<%= link_to "Delete", employee_path(@employee), method: "delete" %>

<%= link_to "Back", employees_path %>